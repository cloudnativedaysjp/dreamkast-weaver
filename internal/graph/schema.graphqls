# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type VoteCount {
  talkId: ID!
  count: Int!
}

type Query {
  voteCounts(confName: String): [VoteCount!]!
}

input NewVote {
  confName: String!
  talkId: ID!
  globalIp: String!
}

type Mutation {
  vote(input: NewVote!): Boolean
}
